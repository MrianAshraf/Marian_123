<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ImageAndo"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/fullstack"
               app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />
            <TextView
                android:id="@+id/l1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/ImageAndo"
                app:layout_constraintEnd_toEndOf="@id/ImageAndo"
                android:text="â€¢HTML"
                android:layout_margin="30dp"
                />
            <TextView
                android:id="@+id/l2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/l1"
                app:layout_constraintEnd_toEndOf="@id/l1"
                android:text="HTML 5"
                android:layout_margin="30dp"
                />
            <TextView
                android:id="@+id/l3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/l2"
                app:layout_constraintEnd_toEndOf="@id/l1"
                android:text="CSS"
                android:layout_margin="30dp"
                />
            <TextView
                android:id="@+id/l4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/l3"
                app:layout_constraintEnd_toEndOf="@id/l1"
                android:text="CSS3"
                android:layout_margin="30dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>