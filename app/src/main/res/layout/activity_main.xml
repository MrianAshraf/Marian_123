<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ImageAndo"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/anrdroid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/And"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ANDROID COURSE"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/ImageAndo"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/ImageAndo"

                />

            <ImageView
                android:id="@+id/ImageIos"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ios"
                app:layout_constraintStart_toStartOf="@id/And"
                app:layout_constraintTop_toTopOf="@id/And" />

            <Button
                android:id="@+id/Ios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="IOS COURSE"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/ImageAndo"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/ImageIos"

                />

            <ImageView
                android:id="@+id/FullStack"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/fullstack"
                app:layout_constraintStart_toStartOf="@id/Ios"
                app:layout_constraintTop_toTopOf="@id/Ios" />

            <Button
                android:id="@+id/FS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="FULL STACK"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/ImageAndo"
                app:layout_constraintStart_toStartOf="@id/ImageAndo"
                app:layout_constraintTop_toBottomOf="@id/FullStack"
/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>